{
  "name": "promised-map",
  "version": "0.2.0",
  "description": "A map of promises that can be resolved or rejected by key",
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/promised-map.git"
  },
  "engines": {
    "node": ">=8"
  },
  "main": "src/index.js",
  "files": [
    "src",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint src test",
    "test": "mocha test/setup test/specs",
    "ci": "npm run lint && npm test",
    "toc": "markdown-toc README.md -i",
    "prerelease": "npm run lint && npm test",
    "release": "npm version $VER && npm publish",
    "postrelease": "git push --follow-tags --no-verify",
    "release-patch": "VER=patch npm run release",
    "release-minor": "VER=minor npm run release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "pre-push": "npm run lint && npm test"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": "eslint"
  },
  "devDependencies": {
    "assert-rejects": "^1.0.0",
    "chai": "^4.2.0",
    "eslint": "^7.18.0",
    "eslint-plugin-mocha": "^8.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "markdown-toc": "^1.2.0",
    "mocha": "^8.2.1"
  },
  "keywords": [
    "promise",
    "promise-api",
    "promises"
  ],
  "license": "MIT"
}
